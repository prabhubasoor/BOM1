{
    "compilerOptions": {
      "module": "system",
      "moduleResolution": "Node",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "outFile": "../../built/local/tsc.js",
      "sourceMap": true,
      "strictNullChecks": true,
      "lib": ["ES2021"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }